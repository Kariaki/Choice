<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteGreen"
    tools:context=".UI.RegistrationAndLogin.AuthenticationPage">

    <com.kariaki.choice.UI.RegistrationAndLogin.OtpEditText
        android:id="@+id/editTextPhone"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="198dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:inputType="number"
        android:cursorVisible="false"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textIsSelectable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="resend code"
        android:id="@+id/resendCode"
        android:padding="10dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/editTextPhone"
        android:layout_alignEnd="@id/editTextPhone"
        />
    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/resendCode"
        android:layout_marginTop="100dp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/button_background_stroke"

        android:text="Verify" />

</RelativeLayout>