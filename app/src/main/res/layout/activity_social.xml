<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kariaki.choice.UI.Profiles.SocialActivities.SocialActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:layout_height="match_parent"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@android:color/transparent"
            app:contentInsetStart="0dp"
            android:id="@+id/notifactionToolbar"
            >
            <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                app:tabTextColor="@color/textContext"
                app:tabSelectedTextColor="@color/colorPrimary"


                android:id="@+id/notifactionTabLayout"
                />
        </androidx.appcompat.widget.Toolbar>

        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:id="@+id/notificationViewPager"
            android:layout_below="@id/notifactionToolbar"
            android:layout_height="match_parent"
            />
    </RelativeLayout>


</RelativeLayout>
