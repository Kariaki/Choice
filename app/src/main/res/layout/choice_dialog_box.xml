<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    >

    <RelativeLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="10dp"
        android:background="@drawable/choice_dialog"
        android:paddingBottom="10sp">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/Toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/topHolder"
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/round_background"
                    android:orientation="vertical"
                    android:visibility="invisible"

                    />

                <TextView
                    android:id="@+id/choiceDialogTittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/topHolder"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"

                    android:background="?android:selectableItemBackgroundBorderless"
                    android:text="Delete Post"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/choiceDialogMessage"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:text=""
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="40dp"
            android:textColor="@color/whiteGreen"

            android:textSize="17sp" />

        <TextView
            android:id="@+id/dialogCancelProcess"
            android:layout_width="90dp"
            android:layout_height="35dp"

            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:padding="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/view_all_profile_background"
            android:gravity="center"
            android:text="Cancel"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"

            android:textSize="15sp" />



        <TextView
            android:id="@+id/choiceDialogConfirmProcess"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:paddingStart="15dp"
            android:gravity="center"
            android:paddingEnd="15dp"
            android:padding="10dp"

            android:background="@drawable/view_all_profile_background"


            android:text="Ok"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"

            android:textSize="15sp" />


    </RelativeLayout>

</RelativeLayout>