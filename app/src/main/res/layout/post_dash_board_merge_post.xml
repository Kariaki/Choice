<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dashBoardSinglePostRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="7dp"
    android:layout_margin="2dp">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dashboardMergePostDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="2dp"
                    android:text="Yesterday 4:14"
                    android:textSize="12dp" />

                <ImageView

                    android:id="@+id/dashBoardDeleteMergePost"
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end"
                    android:layout_marginStart="20dp"

                    android:background="@drawable/cancel_background"
                    android:padding="3dp"
                    android:src="@drawable/cancel" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/dashBoardPostImageOnePreview"
                    android:layout_width="75dp"
                    android:layout_height="150dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp"
                    android:layout_toStartOf="@id/splitter"
                    android:maxHeight="150dp"
                    android:scaleType="centerCrop"

                    android:src="@drawable/two" />

                <View
                    android:id="@+id/splitter"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:id="@+id/dashBoardPostImageTwoPreview"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/splitter"
                    android:maxHeight="150dp"

                    android:scaleType="centerCrop"

                    android:src="@drawable/one" />

                <RelativeLayout
                    android:id="@+id/dashboardMergePostNotificationCountHolder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/notification_round"
                    android:minWidth="23dp"
                    android:minHeight="23dp"
                    android:padding="2dp"

                    android:visibility="invisible">

                    <TextView
                        android:id="@+id/dashBoardMergePostNotificationCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="29"
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />
                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:text="19views"
                android:id="@+id/viewsCount"
                android:textColor="@color/textContext"

                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <com.vanniktech.emoji.EmojiTextView
                    android:id="@+id/dashBoardMergePostCaption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"

                    android:maxLines="3"
                    android:text="hello good morning and welcome home from there "
                    android:textSize="13sp" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/heart1" />

                <TextView
                    android:id="@+id/dashBoardMergePostLikeOneCount"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="2dp"

                    android:text="1.6m"
                    android:textColor="@color/textColor"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/postDashBoardMergeImageComment"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/chat" />

                <TextView
                    android:id="@+id/dashBoardMergePostCommentCount"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="2dp"

                    android:text="1.6m"
                    android:textColor="@color/textColor"

                    android:textSize="12sp"

                    />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/heart1" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="2dp"

                    android:id="@+id/dashBoardMergePostLikeTwoCount"
                    android:text="1.6m"
                    android:textColor="@color/textColor"
                    android:textSize="12dp" />


            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>