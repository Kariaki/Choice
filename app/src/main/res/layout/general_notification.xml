<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"

    android:background="@android:color/transparent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4C98C3B8"
        android:id="@+id/rootView"
        android:paddingTop="5dp"
        >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:id="@+id/userProfilePicture"

        android:layout_marginTop="5dp"

        />

    <com.vanniktech.emoji.EmojiTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_toEndOf="@+id/userProfilePicture"
        android:layout_marginTop="15dp"
        android:textColor="@color/textHeaderColor"
        android:id="@+id/notificationContent"
        android:layout_marginStart="5dp"

        android:maxLines="3"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textContext"
        android:layout_marginTop="2dp"
        android:textSize="13sp"
        android:id="@+id/notificationTime"
        android:layout_below="@id/notificationContent"
        android:layout_alignStart="@id/notificationContent"
        />


</RelativeLayout>

</RelativeLayout>