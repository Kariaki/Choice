<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/transparent"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/bottom_curve_dark_mode"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/changeProfilePicture"
            android:orientation="horizontal"
            android:background="@drawable/my_ripple"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/whiteGreen"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:text="Change Profile picture"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/editDisplayName"
            android:orientation="horizontal"
            android:background="@drawable/my_ripple"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/whiteGreen"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"

                android:text="Edit Display Name"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/editAbout"
            android:background="@drawable/my_ripple"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/whiteGreen"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"

                android:text="Edit Bio"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>