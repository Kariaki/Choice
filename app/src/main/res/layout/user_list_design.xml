<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:paddingTop="5dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:id="@+id/userListProfilePicture"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/userListProfilePicture"
        android:textSize="15dp"
        android:layout_alignTop="@+id/userListProfilePicture"
        android:text=""
        android:typeface="monospace"
        android:layout_marginStart="17dp"
        android:id="@+id/userListUserName"
        />
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/userListProfilePicture"

        android:text=""
        android:layout_marginStart="20dp"
        android:lines="1"
        android:maxWidth="200dp"
        android:layout_below="@+id/userListUserName"
        android:maxHeight="20dp"
        android:textColor="@color/textContext"
        android:textSize="15dp"
        android:id="@+id/userListLastMessage"
        />

    <androidx.appcompat.widget.AppCompatToggleButton
        android:layout_width="25dp"
        android:id="@+id/contactFriendsMarkButton"
        android:textOff=""
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"

        android:textOn=""

        android:layout_height="25dp"
        android:background="@drawable/mark_state"
        />


    <ImageView
        android:layout_width="25dp"
        android:id="@+id/marker"
        android:textOff=""

        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"

        android:textOn=""

        android:layout_height="25dp"
        android:src="@drawable/check"
        />


</RelativeLayout>