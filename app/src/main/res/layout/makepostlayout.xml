<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="120dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_marginEnd="2dp"
        android:id="@+id/makepostImage"
        android:scaleType="centerCrop"
        android:src="@drawable/square_place_holder"

        />
    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="150dp"
        >
        <ImageView
            android:layout_width="40dp"
            android:id="@+id/MakePostGalleryMark"

            android:layout_centerInParent="true"
            android:visibility="invisible"

            android:layout_height="40dp"
            android:src="@drawable/check"
            />
        <ImageView
            android:id="@+id/isVideoHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
           android:layout_alignParentEnd="true"
            android:src="@drawable/video_cam"

            />
    </RelativeLayout>




</RelativeLayout>