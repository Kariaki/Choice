<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
   >

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/rootView"
        android:background="@drawable/mirrow_notail"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Group chat invite"

            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/groupDetailsHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10sp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/small_menu_button_background"
                android:padding="5dp"
                android:src="@drawable/group" />

            <TextView
                android:id="@+id/groupChatInviteGroupnameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:text="Group name"
                android:visibility="gone"
                android:textColor="@color/colorPrimary"

                android:textSize="15sp"

                />


            <TextView
                android:id="@+id/groupInviteGroupChatName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:maxWidth="200dp"
                android:textColor="@color/textContext"
                android:lines="2"

                android:text="University of of Africa basic "
                android:layout_marginEnd="20dp"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:id="@+id/decideSplite"
            android:layout_width="1dp"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"

            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/groupInviteAccept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groupDetailsHolder"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"

            android:background="@drawable/groupchat_invite_text"
            android:clickable="true"
            android:drawableEnd="@drawable/join"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="Join"
            android:textSize="20sp" />

    </RelativeLayout>

</RelativeLayout>